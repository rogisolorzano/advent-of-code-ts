{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "strict": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@utils": ["./src/utils"],
      "@utils/*": ["./src/utils/*"],
      "@core": ["./src/core"],
      "@core/*": ["./src/core/*"]
    },
    "resolveJsonModule": true,
    "lib": ["esnext", "dom"]
  },
  "include": ["./src/**/*"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
